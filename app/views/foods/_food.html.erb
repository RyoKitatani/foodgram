<% foods.each do |food| %>
  <div class="card w-50 mt-4 mr-4 shadow-lg">
    <%= link_to food_path(food) do %>
        <%= attachment_image_tag food, :image, :fill, 230, 230, format: 'jpeg' %>
    <% end %>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
        </div>
        <div class="col-10">
          <p class="card-title">
            <%= link_to(food_path(food), class:"text-dark") do %>
              <strong><i class="far fa-flag"></i><span> <%= food.shop_name %></span></strong>
            <% end %>
          </p>
          <p class="card-text">説明:<%= food.caption %></th><br>
          <span><i class="fas fa-user">ユーザー:</i> By <%= food.user.name %></span>
          </div>
      </div>
    </div>
  </div>
<% end %>
