<div class="container">
  <div class="row o-4column">
    <% foods.each do |food| %>
    <div class="col-md-3">
      <div class="card w-100 mt-4 mr-4 shadow-lg">
        <%= link_to food_path(food) do %>
          <%= attachment_image_tag food, :image, width: '100%', height: '100%', format: 'jpeg' %>
        <% end %>
          <div class="card-body">
            <div class="row">
              <div class="col-10">
                <p class="card-title">
                  <%= link_to(food_path(food), class:"text-dark") do %>
                    <strong><i class="far fa-flag"></i><span> <%= food.shop_name %></span></strong>
                  <% end %>
                </p>
                <p class="card-text">説明:<%= food.caption %></p><br>
                  <span><i class="fas fa-user">ユーザー:</i> By <%= food.user.name %></span>
                <p class="card-text">
                  <%= link_to "#{food.food_comments.count} コメント", food_path(food.id) %>
                </p>
              </div>
            </div>
          </div>
      </div>
    </div> 
    <% end %>
  </div> 
</div>
