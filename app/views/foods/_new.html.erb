<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">新規投稿</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <%= form_with model: food, remote: true do |f| %>
        <div class="modal-body">
          <div class="form-group">
            <%= f.label :image, "ごはん画像" %>
            <%= f.attachment_field :image %>
          </div>
          <div class="form-group">
            <%= f.label :shop_name, "お店"%>
            <%= f.text_field :shop_name, class:"form-control" %>
          </div>
          <div class="form-group">
          <%= f.label :caption, "キャプション" %>
          <%= f.text_area :caption, class:"form-control" %>
          </div>
       </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">閉じる</button>
          <%= f.submit "投稿", class:"btn btn-primary" %>
        </div>
    　<% end %>
    </div>
  </div>
</div>

